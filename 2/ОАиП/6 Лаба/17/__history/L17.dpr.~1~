program L17;

{$APPTYPE CONSOLE}

uses
  System.SysUtils;

const
  Sogl = ['б', 'в', 'г', 'д', 'ж', 'з', 'й', 'к', 'л', 'м', 'н', 'п', 'р', 'с', 'т', 'ф', 'х', 'ц', 'ч', 'ш', 'щ', 'Ѕ', '¬', '√', 'ƒ', '∆', '«', '…', ' ', 'Ћ', 'ћ', 'Ќ', 'ѕ', '–', '—', '“', '‘', '’', '÷', '„', 'Ў', 'ў'];

type
  TSet = Set of AnsiChar;

var
  Stroka,SoglStr: AnsiString;
  M: TSet;
  i,d: Integer;
  Flag: Boolean = True;

begin

  SoglStr:= 'Ѕб¬в√гƒд∆ж«з…й кЋлћмЌнѕп–р—с“т‘ф’х÷ц„чЎшўщ';
  M:= [];
  Write('¬ведите слова: ');
  Readln(Stroka);

  d:= 0;
  for i := 1 to Length(Stroka) do
    if Stroka[i] in Sogl then
      begin
        Include(M,Stroka[i]);
        Inc(d);
      end;

  Writeln;
  Write('—огласные буквы в словах: {');
  for i := 1 to 42 do
    begin
      if SoglStr[i] in M then
        if Flag then
          begin
            Write(SoglStr[i]);
            Flag:= False;
          end
        else
          Write(',' + SoglStr[i]);
    end;
  Writeln('}');
  Writeln;

  Writeln('¬ывод исходной последовательности слов: ',Stroka);

  Readln;
end.
